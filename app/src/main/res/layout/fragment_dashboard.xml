<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DashboardFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="@string/good_afternoon_wilfred_n"
            android:textSize="20sp"
            android:fontFamily="@font/montserrat"
            android:textStyle="normal"
            android:background="@color/blue"
            android:textColor="@color/white"/>


    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:layout_marginTop="30dp"
        android:background="@color/blue"
        android:backgroundTint="@color/blue">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="vertical"
               android:layout_height="match_parent">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:orientation="horizontal"
                   android:layout_marginTop="0dp"
                   android:layout_height="wrap_content">

               <TextView
                   android:id="@+id/balance"
                   android:layout_width="150dp"
                   android:layout_height="30dp"
                   android:text="FlexiPay Balance"
                   android:textColor="@color/black"
                   android:textSize="14sp"
                   android:fontFamily="@font/montserrat"
                   android:textStyle="normal"
                   android:layout_marginTop="10sp"
                   android:layout_marginStart="10dp"/>


                   <TextView
                       android:id="@+id/switch1"
                       android:layout_width="100dp"
                       android:layout_height="18sp"
                       android:layout_marginStart="55dp"
                       android:layout_marginTop="10dp"
                       android:layout_marginEnd="22dp"
                       android:text="+ Hide Balance"
                       android:textSize="10dp"
                       android:fontFamily="@font/montserrat"
                       android:gravity="center"
                       android:textStyle="normal"
                       android:layout_marginLeft="180dp"
                       android:background="@drawable/textview_background"
                       android:textColor="@color/light_blue"/>

               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginTop="0dp">

                   <TextView
                       android:id="@+id/ugx"
                       android:layout_width="45dp"
                       android:layout_height="30dp"
                       android:layout_marginTop="7dp"
                       android:layout_marginLeft="10dp"
                       android:textColor="@color/black"
                       android:textSize="12dp"
                       android:fontFamily="@font/montserrat"
                       android:text="Ugx" />


                   <TextView
                       android:id="@+id/amount"
                       android:layout_width="120dp"
                       android:layout_height="30dp"
                       android:layout_marginLeft="10dp"
                       android:layout_marginTop="7dp"
                       android:text="140,457.05"
                       android:textColor="@color/black"
                       android:textSize="15dp" />

                   <TextView
                       android:layout_width="100dp"
                       android:layout_height="18sp"
                       android:layout_marginLeft="30dp"
                       android:layout_marginTop="7dp"
                       android:background="@drawable/textview_background"
                       android:fontFamily="@font/montserrat"
                       android:gravity="center"
                       android:text="@string/Ministatement"
                       android:textColor="@color/light_blue"
                       android:textSize="10sp"
                       android:textStyle="normal" />



               </LinearLayout>



           </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="110dp"
            app:cardCornerRadius="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <TextView
                android:id="@+id/textview"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10sp"
                android:textStyle="normal"
                android:fontFamily="@font/montserrat"
                android:text="Send Money, Make Payments, Invite a Friend $ Earn Reward points"
                android:textColor="@color/light_blue"
                android:textSize="10dp" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/flexipay_merchants"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"/>



            <TextView
                android:id="@+id/textView2"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:text="PTS"
                android:fontFamily="@font/montserrat"
                android:layout_marginTop="45dp"
                android:layout_marginLeft="25dp"
                android:textColor="@color/black"
                android:textSize="12dp"
                />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_marginLeft="68dp"
                android:layout_marginTop="45dp"
                android:textColor="@color/black"
                android:text="10,000"
                android:textSize="14sp"
                android:textStyle="normal"
                android:visibility="visible" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="18sp"
                android:layout_marginStart="220dp"
                android:layout_marginTop="45dp"
                android:background="@drawable/textview_background"
                android:text="Redeem Points"
                android:backgroundTint="@color/light_blue"
                android:fontFamily="@font/montserrat"
                android:textAlignment="center"
                android:textColor="@color/light_blue"
                android:textColorHint="@color/light_blue"
                android:textSize="10sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="18sp"
                android:layout_marginLeft="220dp"
                android:fontFamily="@font/montserrat"
                android:layout_marginTop="10dp"
                android:background="@drawable/textview_background"
                android:text="Invite a Friend"
                android:backgroundTint="@color/light_blue"
                android:textAlignment="center"
                android:textColor="@color/light_blue"
                android:textColorHint="@color/light_blue"
                android:textSize="10sp"
                android:textStyle="normal" />




        </androidx.cardview.widget.CardView>


    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="245dp"
        android:background="@drawable/landing_bg"
        android:scrollbars="vertical">

    </androidx.recyclerview.widget.RecyclerView>







</RelativeLayout>