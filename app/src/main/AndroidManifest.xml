<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ekenya.android.flexipayapp">

    <uses-permission android:name="android.permission.ACTION_MANAGE_OVERLAY_PERMISSION" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/flexi_pay_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/flexi_pay_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".OnBoardingActivity"
            android:theme="@style/Theme.FlexiPay" />
        <activity android:name=".DashBoardActivity" />
        <activity
            android:name=".InformationActivity"
            android:theme="@style/Theme.FlexiPay" />
        <activity
            android:name=".PersonalActivity"
            android:theme="@style/Theme.FlexiPay" />
        <activity
            android:name=".NumberActivity"
            android:theme="@style/Theme.FlexiPayApp" />
        <activity android:name=".RegisterActivity" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.FlexiPayApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>